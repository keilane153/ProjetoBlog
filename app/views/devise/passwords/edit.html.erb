<h2>CAlterar sua senha</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nova senha" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> Minimo de caracteres)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "Nova Senha" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirme sua nova senha" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Nova Senha" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
